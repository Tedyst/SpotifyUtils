{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch golang with Kubernetes",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "-Debug=true"
            ],
            "preLaunchTask": "bridge-to-kubernetes.service",
            "env": {
                "GRPC_DNS_RESOLVER": "native"
            }
        },
        {
            "name": "Launch golang",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "-Debug=true"
            ]
        },
        {
            "name": "Launch golang with MockExternalCalls enabled",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "-Debug=true",
                "-MockExternalCalls=true",
                "-MockUser=vq0u2761le51p2idib6f89y78"
            ]
        },
        {
            "name": "Launch golang without Debug Mode",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
        },
    ]
}